# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/alike

# Redis Configuration (for BullMQ queue)
# Redis is used for the job queue system
REDIS_HOST=localhost
REDIS_PORT=6379

# Optional: Redis authentication (if using Redis Cloud or secured Redis)
# REDIS_PASSWORD=your_password
# REDIS_USERNAME=default

# Application Configuration
# Port for the web server
PORT=3000

# Node Environment
NODE_ENV=development

# Airport Configuration (for direction detection)
# Default: JFK Airport coordinates
# Change these to match your target airport
AIRPORT_LAT=40.6413
AIRPORT_LNG=-73.7781
AIRPORT_RADIUS_KM=2

# Alternative Airports (uncomment to use):
# Delhi (IGI): AIRPORT_LAT=28.5562, AIRPORT_LNG=77.1000
# London (Heathrow): AIRPORT_LAT=51.4700, AIRPORT_LNG=-0.4543
# Dubai: AIRPORT_LAT=25.2532, AIRPORT_LNG=55.3657

# Pricing Configuration
BASE_FARE=5.0
BASE_RATE_PER_KM=2.5
MAX_POOLING_DISCOUNT=0.5

# Queue Configuration
# Number of retry attempts for failed jobs
QUEUE_MAX_RETRIES=3
# Delay between retries (in milliseconds)
QUEUE_RETRY_DELAY=5000

# Geospatial Configuration
# Default search radius for finding pools (in kilometers)
DEFAULT_SEARCH_RADIUS_KM=5
# Maximum allowed detour for passengers (in kilometers)
MAX_DETOUR_KM=3
